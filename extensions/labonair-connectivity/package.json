{
	"name": "labonair-connectivity",
	"displayName": "Labonair Connectivity",
	"description": "SSH and Remote Host Management for Labonair",
	"version": "1.0.0",
	"publisher": "labonair",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "labonair",
					"title": "Labonair",
					"icon": "$(server-process)"
				}
			]
		},
		"views": {
			"labonair": [
				{
					"type": "webview",
					"id": "labonair.views.hosts",
					"name": "Hosts"
				},
				{
					"type": "webview",
					"id": "labonair.views.identities",
					"name": "Identities"
				},
				{
					"type": "webview",
					"id": "labonair.views.scripts",
					"name": "Scripts & Snippets"
				}
			]
		},
		"commands": [
			{
				"command": "labonair.addHost",
				"title": "Labonair: Add New Host"
			},
			{
				"command": "labonair.connectSSH",
				"title": "Labonair: Connect to Host"
			},
			{
				"command": "labonair.refreshHosts",
				"title": "Labonair: Refresh Hosts"
			},
			{
				"command": "labonair.addIdentity",
				"title": "Labonair: Add New Identity"
			},
			{
				"command": "labonair.refreshIdentities",
				"title": "Labonair: Refresh Identities"
			},
			{
				"command": "labonair.addScript",
				"title": "Labonair: Add New Script"
			},
			{
				"command": "labonair.refreshScripts",
				"title": "Labonair: Refresh Scripts"
			}
		],
		"keybindings": [
			{
				"command": "workbench.view.extension.labonair",
				"key": "alt+h",
				"mac": "alt+h"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/node": "^18.x",
		"@types/ssh2": "^1.11.0",
		"@types/uuid": "^9.0.0",
		"@types/vscode": "^1.85.0",
		"typescript": "^5.3.0"
	},
	"dependencies": {
		"ssh2": "^1.15.0",
		"uuid": "^9.0.0"
	}
}
